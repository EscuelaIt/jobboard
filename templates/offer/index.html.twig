{% extends 'base.html.twig' %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{{ 'offer.list.all' | trans }}</h1>

    {% for o in offers %}
        <p>{{ o.title }}, {{ o.type }} - {{ o.company }} - $ {{ o.compensation }} - <a href="{{ url('apply_to_offer', { id: o.id }) }}">{{ 'offer.apply.link' | trans }}</a></p>
    {% else %}
        <p>{{ 'offer.not_available' | trans }}</p>
    {% endfor %}
</div>
{% endblock %}
